<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.asuper.aidldemo.view.LoopNewsView
        android:id="@+id/lnv_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/kk_0e7dd1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lnv_text_color="@color/kk_0B0022"
        app:lnv_text_size="18sp"
        app:lnv_tip_icon="@mipmap/bang_start_tip"
        android:visibility="gone"/>

    <com.asuper.aidldemo.view.MarqueeTextView
        android:id="@+id/tv_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/lnv_view"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <com.asuper.aidldemo.view.LoopView
        android:id="@+id/lv_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:lv_text_color="@color/kk_0B0022"
        app:lv_text_icon="@mipmap/bang_start_tip"
        app:lv_text_size="18sp"/>

</android.support.constraint.ConstraintLayout>